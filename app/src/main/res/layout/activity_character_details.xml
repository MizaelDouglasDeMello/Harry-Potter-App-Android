<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.character.CharacterDetailsActivity">


    <!-- Container para a imagem de fundo e os textos -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topSectionCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagem de fundo (somente no topo) -->
        <ImageView
            android:id="@+id/backgroundImageCharacter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.7"
            android:background="#000000"
            android:scaleType="centerCrop"
            android:src="@drawable/harrbg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Imagem do livro à esquerda -->
        <ImageView
            android:id="@+id/characterCoverImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/circular_image"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/book"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImageCharacter"
            app:layout_constraintEnd_toEndOf="@+id/backgroundImageCharacter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCharacter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topSectionCharacter" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="Full name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineCharacter"
        app:layout_constraintTop_toBottomOf="@+id/topSectionCharacter" />

    <TextView
        android:id="@+id/txtNameCharacter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lord Voldemort"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtFullNameCharacter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tom Marvolo Riddle"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Hogwarts House"
        app:layout_constraintEnd_toEndOf="@+id/txtNameCharacter"
        app:layout_constraintStart_toStartOf="@+id/txtNameCharacter"
        app:layout_constraintTop_toBottomOf="@+id/txtNameCharacter" />

    <TextView
        android:id="@+id/txtHogwartsHouse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sonserina"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Interpreted By"
        app:layout_constraintEnd_toEndOf="@+id/txtFullNameCharacter"
        app:layout_constraintStart_toStartOf="@+id/txtFullNameCharacter"
        app:layout_constraintTop_toBottomOf="@+id/txtFullNameCharacter" />

    <TextView
        android:id="@+id/txtInterpretedBy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ralph Fiennes"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ImageView
        android:id="@+id/imgHouseCharacter"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/txtInterpretedBy"
        app:layout_constraintStart_toStartOf="@+id/txtHogwartsHouse"
        app:layout_constraintTop_toBottomOf="@+id/txtHogwartsHouse"
        app:srcCompat="@drawable/sonserina" />

    <!-- Título "Summary" abaixo da seção com imagem de fundo -->

    <!-- Texto de resumo -->

</androidx.constraintlayout.widget.ConstraintLayout>